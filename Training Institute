package com.mvc.dao;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import com.login.util.DBConnection;
import com.mvc.bean.RegisterBean4;
 
public class RegisterDao4 { 
     public String registerUser(RegisterBean4 registerBean4)
     {
         String UserName = registerBean4.getUserName();
         String Name = registerBean4.getName();
         String Request = registerBean4.getRequest();
         String Response = registerBean4.getResponse();
        
         
         Connection con = null;
         PreparedStatement preparedStatement = null;         
         try
         {
             con = DBConnection.createConnection();
             String query = "insert into student_request(UserName,Name,Request,Response) values (?,?,?,?)"; //Insert user details into the table 'USERS'
             preparedStatement = con.prepareStatement(query); //Making use of prepared statements here to insert bunch of data
             preparedStatement.setString(1,UserName );
             preparedStatement.setString(2,Name );
             preparedStatement.setString(3,Request );
             preparedStatement.setString(4,Response);
          
             
             int i= preparedStatement.executeUpdate();
             
             if (i!=0)  //Just to ensure data has been inserted into the database
             return "SUCCESS"; 
         }
         catch(SQLException e)
         {
            e.printStackTrace();
         }       
         return "Oops.. Something went wrong there..!";  // On failure, send a message from here.
     }
