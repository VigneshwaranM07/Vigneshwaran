	<%
	String usernmae = request.getParameter("usn");
	String passwrd = request.getParameter("pass");
	String CONN_STRING = "jdbc:mysql://localhost:3306/customers";
	String USERNAME = "root";
	String PASSWORD = "123456";

	Connection conn = null;
	ResultSet rs = null;
	ResultSet rs2 = null;
	ResultSet rs3 = null;
	Statement stmt = null;

	Class.forName("com.mysql.jdbc.Driver");

	conn = DriverManager.getConnection(CONN_STRING, USERNAME, PASSWORD);
	Statement stmt2 = conn.createStatement();
	ResultSet rst = stmt2
			.executeQuery("select * from institution_details where Name='" + usernmae + "' && Password='" + passwrd + "'");
	String name = null;
	String email = null;
	String pass = null;
	String add = null;
	String con = null;
	String userid = null;
	if (rst.next()) {
		pass = rst.getString("Password");
		email = rst.getString("Affiliation");
		add = rst.getString("Address");
		con = rst.getString("Seats");
		userid = rst.getString("Courses");
		name = rst.getString("Name");

	}
	%>
	<center>
		<div align="center"
			style="border: 2px outset black; width: 400px; height: 500px">

			<br></br>
			<h1 style="font-size: 35px;">Update Profile</h1>


			<br></br>
			<form method="post"
				action="<%=request.getContextPath()%>/UpdateInstitute">
				<label style="font-size: 20px"></label> Password&nbsp;&nbsp;<input
					style="font-size: 20px" placeholder="enter the Password"
					value="<%=pass%>" name="spass" /><br></br> Affiliation&nbsp;&nbsp;<input
					style="font-size: 20px" placeholder="enter the Affiliation"
					value="<%=email%>" name="semail" /><br></br> Address&nbsp;&nbsp;<input
					style="font-size: 20px" placeholder="enter the Address"
					value="<%=add%>" name="sadd" /><br></br>
				Seats&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input
					style="font-size: 20px" placeholder="enter the Seats"
					value="<%=con%>" name="scon" /><br></br>
				Courses&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input style="font-size: 20px"
					placeholder="enter the Courses" value="<%=userid%>" name="UserId" /><br></br>
				<input placeholder="enter the Name" value="<%=name%>" name="sname"
					type="hidden" /> <input style="font-size: 20px" type="submit"
					value="submit" />
			</form>
	</center>
</body>
