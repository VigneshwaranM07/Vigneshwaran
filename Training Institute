package com.mvc.servlet;

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.mvc.dao.DeleteBean;

//import jakarta.servlet.*;

//import jakarta.servlet.http.HttpServlet;
//import jakarta.servlet.http.HttpServletRequest;
//import jakarta.servlet.http.HttpServletResponse;

import com.mvc.dao.DeleteDao;

public class DeleteServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;

	public DeleteServlet() {
	}

	protected void doPost(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {
		// Copying all the input parameters in to local variable
		String Name = request.getParameter("Name");

		DeleteBean deleteBean = new DeleteBean();
		// Using Java Beans - An easiest way to play with group of related data
		deleteBean.setName(Name);

		DeleteDao deleteDao = new DeleteDao();

		// The core Logic of the Registration application is present here. We are going
		// to insert user data in to the database.
		String deletedInstitute = deleteDao.registerUser(deleteBean);

		if (deletedInstitute.equals("SUCCESS")) // On success, you can display a message to user on Home page
		{
			request.getRequestDispatcher("/deletesucess.jsp").forward(request, response);
		} else // On Failure, display a meaningful message to the User.
		{
			request.setAttribute("errMessage", deletedInstitute);
			request.getRequestDispatcher("/Register.jsp").forward(request, response);
		}
	}
}
package com.mvc.servlet;

